<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orcchg.chatclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ChatClientApplication"
        android:supportsRtl="true"
        android:theme="@style/CommonTheme" >
        <activity
            android:name=".ui.authorization.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.authorization.RegistrationActivity" />

        <activity
            android:name=".ui.chat.ChatActivity"
            android:label="@string/chat_label" />
    </application>

</manifest>
